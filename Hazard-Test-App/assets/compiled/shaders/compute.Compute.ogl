#version 450
layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(binding = 0, rgba8) uniform restrict writeonly image2D o_OutputImage;

void main()
{
    vec4 value = vec4(1.0);
    ivec2 texelCoord = ivec2(gl_GlobalInvocationID.xy);
    value.y = 1.0;
    value.x = float(texelCoord.x) / float(gl_NumWorkGroups.x);
    value.z = float(texelCoord.y) / float(gl_NumWorkGroups.y);
    imageStore(o_OutputImage, texelCoord, value);
}

